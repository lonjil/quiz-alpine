#!/usr/bin/env bash
set -uo pipefail

usage() {
  cat <<EOF
compile a kernel optimised for the quiz microvm
usage: quiz-prepare-kernel
EOF
  exit 1
}

trace() {
  local STAMP=$(date +%Y%m%d-%H:%M:%S)
  echo "[quiz-prepare-kernel] $STAMP $@" >&2
}

fail() {
  trace "FATAL $@"
  exit 1
}
trap fail ERR

OPTIND=1
while getopts "h" opt
do
  case "$opt" in
    'h') usage ;;
    *) exit 1 ;;
  esac
done
shift $(expr $OPTIND - 1)

RUNDIR=$(realpath $(dirname $0))

cd $RUNDIR

mkdir -p build
if [[ ! -d build/kernel ]] ; then
  trace "preparing kernel source"
  mkdir -p build/kernel
  pushd build/kernel
  curl -O https://cdn.kernel.org/pub/linux/kernel/v5.x/linux-5.10.170.tar.xz
  tar xfJ linux-5.10.170.tar.xz
  popd
  cp kernel/config-5.10 build/kernel/linux-5.10.170/.config
fi

trace "building kernel"

pushd build/kernel/linux-5.10.170
make olddefconfig
make -j8
popd

trace "moving completed kernel into place"

mkdir -p system
cp build/kernel/linux-5.10.170/arch/x86/boot/bzImage system/bzImage

trace "done"
